<div class="container">
    <h1 class="text-center">Ingresar Documental</h1>
    <br><br>

    <div class="d-flex justify-content-center ">
        <div class="card col-6">
        <%= form_with model: @documentary_film, method: :post do |documentary_film| %>
        <div class="border p-5 shadow ">
                    <div class="mb-3">
                        <%= documentary_film.label :name, "Nombre", class:"form-label" %>
                        <%= documentary_film.text_field :name, class:"form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= documentary_film.label :synopsis, "Synopsis", class:"form-label" %>
                        <%= documentary_film.text_area :synopsis, class:"form-control" %>
                    </div>
                    <div class="mb-5">
                        <%= documentary_film.label :director, "Director", class:"form-label" %>
                        <%= documentary_film.text_field :director, class:"form-control" %>
                    </div>
                    <div class="text-center">
                        <%= documentary_film.submit "Enviar", class:"btn btn-dark" %>
                    </div>
                </div>
        <% end %>
        </div>
    </div>
    
</div>