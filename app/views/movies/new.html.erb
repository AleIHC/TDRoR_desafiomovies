<div class="container">
    <h1 class="text-center">Ingresar Pel√≠cula</h1>
    <br><br>


    <div class="d-flex justify-content-center ">
        <div class="card col-6">
            <%= form_with model: @movie, method: :post do |movie| %>
                <div class="border p-5 shadow ">
                    <div class="mb-3">
                        <%= movie.label :name, "Nombre", class:"form-label" %>
                        <%= movie.text_field :name, class:"form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= movie.label :synopsis, "Synopsis", class:"form-label" %>
                        <%= movie.text_area :synopsis, class:"form-control" %>
                    </div>
                    <div class="mb-5">
                        <%= movie.label :director, "Director", class:"form-label" %>
                        <%= movie.text_field :director, class:"form-control" %>
                    </div>
                    <div class="text-center">
                        <%= movie.submit "Enviar", class:"btn btn-dark" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>