<div class="container mx-auto mt-4 mb-4">
<h1>Lista de Películas</h1>
    <%= link_to "Agregar nueva película", movies_new_path, class:"btn btn-dark" %>
</div>


  
    <div class="row">
        <% @movies.each do |movie| %>
            <div class="col-md-3 ">
                <div class="card my-2 border p-1 shadow" style="width: 18rem; height: 13rem">
                    <div class="card-body">
                        <h5 class="card-title"><%= movie.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Director: <%= movie.director %></h6>
                        <hr>
                        <h6 class="card-subtitle mb-2 text-muted">Synopsis: </h6>
                        <p class="card-text"><%= movie.synopsis %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>


